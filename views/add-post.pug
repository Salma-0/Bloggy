extends layout

block content
    div(class='container' )
        h2 New Post
        div(class='row p-4 m-2')
            div(class='col-md-3')
                button(type='button' id='headingBtn' class='btn btn-outline-primary w-100 mb-1') Section Heading
            div(class='col-md-3')
                button(type='button' id='paragraphBtn' class='btn btn-outline-info w-100 mb-1') New Paragraph
            div(class='col-md-3')
                button(type='button' id='imageBtn' class='btn btn-outline-dark w-100 mb-1') New Image
            div(class='col-md-3')
                button(type='button' id='quoteBtn' class='btn btn-outline-danger w-100') New Quote
        form(mathod='POST' action='/' class='p-3 m-2')
            input(type='text' name='title' placeholder='Title' class='form-control mb-2' ng-model='title')
            input(type='text' name='firstHeading' placeholder='First Heading' class='form-control mb-2' ng-model='fheading')
            label Upload the cover image
            input(type='file' name='coverImage' class='form-control mb-2')
            hr
            div(class='container p-3 m-2' id='dynInputs')

            button(class='btn btn-info w-70' type='submit') Create A New Blog Post 



            

